  font-size: 22rpx;
  color: #888;
}

.brand-right-logo {
  font-size: 60rpx;
  opacity: 0.9;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1));
}

/* ÊÇ¨ÊµÆÊêúÁ¥¢Ê°Ü (Glassmorphism) */
.search-box-glass {
  position: relative;
  z-index: 2;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx 0 30rpx;
