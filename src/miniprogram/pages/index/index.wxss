}

.placeholder-text {
  font-size: 26rpx;
  color: #888;
}

.search-btn {
  background: var(--primary-green);
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-weight: bold;
}

/* ÂÜÖÂÆπÂå∫ */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.category-nav {
  width: 170rpx;
  background: transparent;
}

.category-item {
  position: relative;
  padding: 30rpx 10rpx;
  font-size: 28rpx;
  color: var(--text-gray);
  text-align: center;
}

.category-item.active {
  color: var(--text-dark);
  font-weight: bold;
  background: var(--bg-white);
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
