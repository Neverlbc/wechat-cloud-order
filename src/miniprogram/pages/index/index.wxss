}

/* üöÄ ÊµÆÂä®ÁªìÁÆóÊù° - Ê∏©ÊöñÁ†ÇÈîÖË∞ÉÊµÆÂ≤õÈ••ËÆæËÆ° üöÄ */
.float-cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  opacity: 0;
  pointer-events: none;
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  background: linear-gradient(135deg, rgba(245, 243, 239, 0.96) 0%, rgba(255, 255, 255, 0.98) 100%);
  backdrop-filter: blur(24px) saturate(1.6);
  -webkit-backdrop-filter: blur(24px) saturate(1.6);
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 30rpx rgba(74, 124, 89, 0.1), 0 -1rpx 0 rgba(74, 124, 89, 0.08);
}

.float-cart-bar.show {
  opacity: 1;
  pointer-events: auto;
  transform: translateY(0);
}

.cart-content {
  height: 120rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.cart-icon-box {
  position: relative;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(145deg, #5D9B6E 0%, var(--primary-green) 50%, var(--primary-green-dark) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -60rpx;
  box-shadow: 0 8rpx 24rpx rgba(74, 124, 89, 0.45), inset 0 2rpx 4rpx rgba(255,255,255,0.2);
  border: 3rpx solid rgba(255, 255, 255, 0.5);
}

.cart-emoji {
  font-size: 48rpx;
  filter: drop-shadow(0 2rpx 3rpx rgba(0,0,0,0.15));
}

.cart-count-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: linear-gradient(135deg, #FF6B6B, #EE4444);
  color: #fff;
  font-size: 24rpx;
  min-width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  font-weight: 800;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(238, 68, 68, 0.35);
}

.cart-price-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.price-row {
  color: var(--text-dark);
  display: flex;
  align-items: baseline;
}

.symbol {
  font-size: 26rpx;
  font-weight: 500;
  margin-right: 4rpx;
  color: var(--primary-green);
}

.total-price {
  font-size: 46rpx;
  font-weight: 800;
  letter-spacing: -1rpx;
  color: var(--primary-green-dark);
}

.delivery-tip {
  font-size: 20rpx;
  color: var(--gold-accent);
  margin-top: -2rpx;
  opacity: 0.75;
}

.checkout-btn {
  background: linear-gradient(135deg, #5D9B6E 0%, var(--primary-green) 100%);
  color: #fff;
  height: 86rpx;
  line-height: 86rpx;
  padding: 0 50rpx;
  border-radius: 43rpx;
  font-weight: 700;
  font-size: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(74, 124, 89, 0.35);
  transition: all 0.3s;
  overflow: hidden;
  position: relative;
  letter-spacing: 2rpx;
}

.checkout-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 10rpx rgba(74, 124, 89, 0.3);
}


/* Ë¥≠Áâ©ËΩ¶ÂºπÂá∫Â±ÇÊ†∑Âºè */
.cart-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 900;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.cart-mask.show {
  opacity: 1;
  visibility: visible;
}

.cart-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  background: var(--bg-white);
  border-radius: 48rpx 48rpx 0 0;
  z-index: 950;
  transform: translateY(120%);
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
  padding-bottom: 40rpx;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  box-sizing: border-box;
}

.cart-popup.show {
  transform: translateY(0);
}

/* È°∂ÈÉ®ÊåáÁ§∫Êù° */
.cart-popup::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 30rpx;
  background: #FFFFFF;
  border-radius: 48rpx 48rpx 0 0;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  position: relative;
}

.popup-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: var(--primary-green);
  border-radius: 2rpx;
}

.clear-cart {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
  background: #F5F5F5;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.clear-cart:active {
  background: #EEEEEE;
  color: #666;
}

.popup-list {
  max-height: 650rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  overflow: hidden;
}

.cart-item-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
  margin-right: 16rpx;
  min-height: 72rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cart-item-name {
  font-size: 28rpx;
  color: #222;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cart-item-spec {
  font-size: 22rpx;
  color: var(--gold-accent);
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-height: 30rpx;
}

.cart-item-spec-none {
  color: var(--text-light);
}

.cart-item-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  max-width: 50%;
}

.cart-item-price {
  font-size: 28rpx;
  color: var(--gold-accent);
  font-weight: 700;
  margin-right: 16rpx;
  white-space: nowrap;
}

.cart-qty-control {
  display: flex;
  align-items: center;
  background: var(--primary-green);
  border-radius: 24rpx;
  padding: 4rpx 8rpx;
}

.cart-qty-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
}

.cart-qty-num {
  color: #fff;
  font-size: 26rpx;
  font-weight: 700;
  min-width: 36rpx;
  text-align: center;
}

.popup-footer {
  height: 60rpx;
}

