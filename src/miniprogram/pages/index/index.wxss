}

/* Á∫¢Ëâ≤Âç∞Á´† */
.brand-seal {
  background: #B83B3B;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-weight: lighter;
  font-family: serif;
  box-shadow: 0 2rpx 4rpx rgba(184, 59, 59, 0.3);
  writing-mode: vertical-rl; /* Á´ñÊéíÊñáÂ≠ó */
  text-orientation: upright;
  letter-spacing: 2rpx;
}

.brand-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.shop-status {
  background: rgba(74, 124, 89, 0.1);
  color: var(--primary-green);
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
