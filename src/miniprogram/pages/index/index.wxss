page {
  --primary-green: #4A7C59;
  --primary-green-dark: #3D6B4A;
  --gold-accent: #8B7355;
  --bg-light: #F5F3EF;
  --bg-white: #FFFFFF;
  --text-dark: #333333;
  --text-gray: #888888;
  --text-light: #AAAAAA;
  --card-radius: 20rpx;
  --shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
