}

.spec-hint-icon {
  font-size: 18rpx;
}

/* Âä†ÂáèÂô® */
.quantity-control {
  display: flex;
  align-items: center;
  background: var(--primary-green);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.action-btn {
  color: #fff;
  font-size: 36rpx;
