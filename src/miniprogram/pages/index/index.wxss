  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(74, 124, 89, 0.08) 0%, rgba(255,255,255,0) 70%);
  border-radius: 50%;
  z-index: 0;
}

/* ÂìÅÁâåÂå∫Âüü */
.brand-section {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.brand-name-box {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.brand-name {
  font-size: 56rpx;
  font-weight: 900;
  color: #2C3E30;
  font-family: "STKaiti", "KaiTi", "Ê•∑‰Ωì", serif;
