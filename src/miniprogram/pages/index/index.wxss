}

.goods-image {
  width: 170rpx;
  height: 170rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background: #EEE;
}

.goods-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.goods-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  color: var(--gold-accent);
}

.price-value {
  font-size: 40rpx;
  font-weight: bold;
}

.add-cart-btn {
  background: var(--primary-green);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
}

.add-cart-icon {
  margin-right: 6rpx;
}

/* ÂèØÂä†ÊñôÊ†áÁ≠æ */
.goods-spec-hint {
  display: inline-flex;
  align-items: center;
  font-size: 20rpx;
  color: var(--gold-accent);
  background: rgba(139, 115, 85, 0.08);
  padding: 2rpx 12rpx;
