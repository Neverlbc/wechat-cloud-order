/* pages/admin/admin.wxss */
/* 一味鲜 - 商家管理后台 */

page {
    --admin-green: #4A7C59;
    --admin-green-dark: #3D6B4A;
    --admin-gold: #8B7355;
    --admin-red: #EE4444;
    --admin-bg: #F2F4F7;
    background: var(--admin-bg);
}

.admin-page {
    min-height: 100vh;
    padding-bottom: 60rpx;
}

/* 统计面板 */
.stats-panel {
    background: linear-gradient(145deg, #4A7C59 0%, #3D6B4A 60%, #2E5838 100%);
    padding: 40rpx 30rpx 50rpx;
    position: relative;
    overflow: hidden;
}

.stats-panel::before {
    content: '';
    position: absolute;
    top: -40rpx;
    right: -40rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background: rgba(255,255,255,0.06);
}

.stats-panel::after {
    content: '';
    position: absolute;
    bottom: -60rpx;
    left: 30%;
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    background: rgba(255,255,255,0.04);
}

.stats-row {
    display: flex;
    gap: 20rpx;
    position: relative;
    z-index: 1;
}

.stat-card {
    flex: 1;
    background: rgba(255,255,255,0.12);
    border-radius: 20rpx;
    padding: 28rpx 20rpx;
    text-align: center;
    backdrop-filter: blur(10px);
    border: 1rpx solid rgba(255,255,255,0.08);
}

.stat-card.highlight {
    background: rgba(255,255,255,0.2);
    border-color: rgba(255,255,255,0.15);
}

.stat-num {
    display: block;
    font-size: 42rpx;
    font-weight: 800;
    color: #fff;
    line-height: 1.2;
}

.stat-label {
    display: block;
    font-size: 22rpx;
    color: rgba(255,255,255,0.7);
    margin-top: 8rpx;
}

/* 快捷操作 */
.action-grid {
    display: flex;
    padding: 30rpx;
    gap: 24rpx;
    margin-top: -20rpx;
    position: relative;
    z-index: 2;
}

.action-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx 10rpx 24rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
    position: relative;
    transition: all 0.2s;
}

.action-item:active {
    transform: scale(0.96);
}

.action-icon-box {
    width: 88rpx;
    height: 88rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16rpx;
}

.action-icon {
    font-size: 40rpx;
}

.action-text {
    font-size: 24rpx;
    color: #333;
    font-weight: 600;
}

.action-badge {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background: var(--admin-red);
    color: #fff;
    font-size: 20rpx;
    min-width: 36rpx;
    height: 36rpx;
    border-radius: 18rpx;
    text-align: center;
    line-height: 36rpx;
    font-weight: 700;
}

/* 通用 section */
.section {
    margin: 20rpx 30rpx;
    background: #fff;
    border-radius: 24rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #222;
}

.section-more {
    font-size: 26rpx;
    color: #999;
    display: flex;
    align-items: center;
    gap: 4rpx;
}

.section-more .arrow {
    font-size: 28rpx;
}

/* 订单卡片 */
.admin-order-card {
    background: #FAFBFC;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid #F0F0F0;
}

.admin-order-card:last-child {
    margin-bottom: 0;
}

.order-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16rpx;
}

.order-id-row {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.order-id {
    font-size: 24rpx;
    color: #666;
    font-family: 'Courier New', monospace;
}

.order-status {
    font-size: 22rpx;
    padding: 4rpx 14rpx;
    border-radius: 8rpx;
    font-weight: 600;
}

.order-status.status-0 {
    background: #FFF7E6;
    color: #F0A04B;
}

.order-status.status-1 {
    background: #FFF0F0;
    color: var(--admin-red);
}

.order-time {
    font-size: 22rpx;
    color: #BBB;
}

.order-card-body {
    padding: 12rpx 0;
    border-top: 1rpx dashed #E8E8E8;
    border-bottom: 1rpx dashed #E8E8E8;
}

.order-item-row {
    display: flex;
    align-items: center;
    padding: 6rpx 0;
}

.food-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 600;
}

.food-spec {
    font-size: 22rpx;
    color: var(--admin-gold);
    margin-left: 4rpx;
}

.food-qty {
    margin-left: auto;
    font-size: 26rpx;
    color: #999;
    font-weight: 600;
}

.order-card-footer {
    margin-top: 16rpx;
}

.order-info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
}

.order-address {
    font-size: 24rpx;
    color: #888;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 20rpx;
}

.order-total {
    font-size: 32rpx;
    font-weight: 800;
    color: var(--admin-red);
}

.order-actions {
    display: flex;
    justify-content: flex-end;
    gap: 16rpx;
}

.admin-btn {
    padding: 14rpx 40rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 700;
    text-align: center;
    transition: all 0.2s;
}

.admin-btn:active {
    transform: scale(0.96);
}

.btn-reject {
    background: #F5F5F5;
    color: #999;
}

.btn-accept {
    background: linear-gradient(135deg, #5D9B6E, var(--admin-green));
    color: #fff;
    box-shadow: 0 4rpx 16rpx rgba(74, 124, 89, 0.3);
}

/* 空状态 */
.empty-state {
    text-align: center;
    padding: 60rpx 0;
}

.empty-state.small {
    padding: 30rpx 0;
}

.empty-icon {
    display: block;
    font-size: 64rpx;
    margin-bottom: 16rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #BBB;
}

/* 已完成列表 */
.completed-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18rpx 0;
    border-bottom: 1rpx solid #F5F5F5;
}

.completed-item:last-child {
    border-bottom: none;
}

.completed-left {
    flex: 1;
    min-width: 0;
}

.completed-id {
    font-size: 22rpx;
    color: #BBB;
    display: block;
    font-family: 'Courier New', monospace;
}

.completed-items {
    font-size: 26rpx;
    color: #555;
    display: block;
    margin-top: 4rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.completed-amount {
    font-size: 28rpx;
    font-weight: 700;
    color: var(--admin-green);
    flex-shrink: 0;
    margin-left: 20rpx;
}
