/* pages/admin-settings/admin-settings.wxss */

page {
    background: #F2F4F7;
}

.settings-page {
    padding-bottom: 160rpx;
}

/* 区块 */
.section {
    margin: 24rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 28rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.section-title {
    font-size: 30rpx;
    font-weight: 700;
    color: #222;
    margin-bottom: 24rpx;
}

/* 营业状态卡片 */
.status-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 28rpx 24rpx;
    border-radius: 16rpx;
    transition: all 0.3s;
}

.status-card.open {
    background: linear-gradient(135deg, rgba(93,155,110,0.1), rgba(74,124,89,0.05));
    border: 2rpx solid rgba(74,124,89,0.2);
}

.status-card.closed {
    background: rgba(238,68,68,0.05);
    border: 2rpx solid rgba(238,68,68,0.15);
}

.status-left {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.status-icon {
    font-size: 36rpx;
}

.status-main {
    display: block;
    font-size: 32rpx;
    font-weight: 700;
    color: #222;
}

.status-sub {
    display: block;
    font-size: 22rpx;
    color: #BBB;
    margin-top: 4rpx;
}

/* 开关 */
.toggle-switch {
    width: 96rpx;
    height: 52rpx;
    border-radius: 26rpx;
    background: #DDD;
    position: relative;
    transition: all 0.3s;
}

.toggle-switch.on {
    background: #4A7C59;
}

.toggle-dot {
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    background: #fff;
    position: absolute;
    top: 4rpx;
    left: 4rpx;
    transition: all 0.3s;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}

.toggle-switch.on .toggle-dot {
    left: 48rpx;
}

/* 表单 */
.form-group {
    display: flex;
    flex-direction: column;
    gap: 0;
}

.form-item {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #F5F5F5;
}

.form-item:last-child {
    border-bottom: none;
}

.form-label {
    font-size: 28rpx;
    color: #666;
    width: 200rpx;
    flex-shrink: 0;
    font-weight: 500;
}

.form-input {
    flex: 1;
    font-size: 28rpx;
    color: #222;
    text-align: right;
}

.form-textarea {
    flex: 1;
    font-size: 26rpx;
    color: #222;
    min-height: 100rpx;
    padding: 16rpx;
    background: #FAFAFA;
    border-radius: 12rpx;
}

.form-picker {
    font-size: 28rpx;
    color: #4A7C59;
    font-weight: 600;
}

/* 操作项 */
.action-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 28rpx 0;
    border-bottom: 1rpx solid #F5F5F5;
}

.action-item:last-child {
    border-bottom: none;
}

.action-item:active {
    opacity: 0.7;
}

.action-label {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
}

.action-item.danger .action-label {
    color: #EE4444;
}

.action-arrow {
    font-size: 36rpx;
    color: #CCC;
    font-weight: 300;
}

/* 保存按钮 */
.save-area {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx 40rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    background: #fff;
    box-shadow: 0 -2rpx 20rpx rgba(0,0,0,0.06);
}

.save-btn {
    background: linear-gradient(135deg, #5D9B6E, #4A7C59);
    color: #fff;
    text-align: center;
    padding: 28rpx 0;
    border-radius: 16rpx;
    font-size: 32rpx;
    font-weight: 700;
    box-shadow: 0 6rpx 20rpx rgba(74,124,89,0.3);
}

.save-btn:active {
    transform: scale(0.98);
    opacity: 0.9;
}
