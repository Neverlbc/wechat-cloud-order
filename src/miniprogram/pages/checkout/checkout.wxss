/* pages/checkout/checkout.wxss */
/* 一味鲜 - 结算页（延续主页设计语言） */

page {
    --primary-green: #4A7C59;
    --primary-green-dark: #3D6B4A;
    --gold-accent: #8B7355;
    --bg-light: #F5F3EF;
    --bg-white: #FFFFFF;
    --text-dark: #333333;
    --text-gray: #888888;
    --card-radius: 20rpx;
}

.checkout-page {
    min-height: 100vh;
    background: var(--bg-light);
    padding: 20rpx 24rpx;
    padding-bottom: env(safe-area-inset-bottom);
}

/* 地址卡片 */
.address-card {
    position: relative;
    background: var(--bg-white);
    border-radius: var(--card-radius);
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
    overflow: hidden;
}

.address-content, .address-empty {
    display: flex;
    align-items: center;
}

.address-icon {
    font-size: 40rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.address-detail {
    flex: 1;
}

.address-user {
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
}

.user-name {
    font-size: 32rpx;
    font-weight: 700;
    color: var(--text-dark);
    margin-right: 20rpx;
}

.user-phone {
    font-size: 28rpx;
    color: var(--text-gray);
}

.address-text {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
}

.address-arrow {
    font-size: 36rpx;
    color: #ccc;
    margin-left: 10rpx;
}

.empty-text {
    flex: 1;
    font-size: 28rpx;
    color: var(--text-gray);
}

/* 锯齿底边装饰 */
.address-zigzag {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    background: repeating-linear-gradient(
        135deg,
        var(--primary-green) 0,
        var(--primary-green) 6rpx,
        #F0C14B 6rpx,
        #F0C14B 12rpx,
        #E74C3C 12rpx,
        #E74C3C 18rpx,
        #3498DB 18rpx,
        #3498DB 24rpx
    );
}

/* 通用section */
.order-section {
    background: var(--bg-white);
    border-radius: var(--card-radius);
    padding: 28rpx 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
}

.section-icon {
    font-size: 32rpx;
    margin-right: 12rpx;
}

.section-title {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-dark);
    flex: 1;
}

.section-count {
    font-size: 24rpx;
    color: var(--text-gray);
}

/* 商品清单 */
.order-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.order-item:last-child {
    border-bottom: none;
}

.item-info {
    flex: 1;
}

.item-name {
    font-size: 28rpx;
    color: var(--text-dark);
    font-weight: 500;
}

.item-spec {
    font-size: 22rpx;
    color: var(--text-gray);
    margin-top: 4rpx;
    display: block;
}

.item-right {
    display: flex;
    align-items: center;
}

.item-quantity {
    font-size: 26rpx;
    color: var(--text-gray);
    margin-right: 20rpx;
}

.item-price {
    font-size: 28rpx;
    color: var(--text-dark);
    font-weight: 600;
    min-width: 100rpx;
    text-align: right;
}

/* 配送方式 */
.delivery-options {
    display: flex;
    gap: 20rpx;
}

.delivery-option {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24rpx 0;
    border-radius: 16rpx;
    border: 2rpx solid #E8E8E8;
    font-size: 28rpx;
    color: #666;
    transition: all 0.3s;
}

.delivery-option.active {
    border-color: var(--primary-green);
    background: rgba(74, 124, 89, 0.06);
    color: var(--primary-green);
    font-weight: 600;
}

.delivery-emoji {
    margin-right: 10rpx;
    font-size: 32rpx;
}

/* 备注 */
.remark-box {
    position: relative;
}

.remark-input {
    width: 100%;
    height: 140rpx;
    font-size: 26rpx;
    color: var(--text-dark);
    padding: 16rpx;
    box-sizing: border-box;
    background: #FAFAFA;
    border-radius: 12rpx;
    border: 1rpx solid #F0F0F0;
}

.remark-placeholder {
    color: #C0C0C0;
    font-size: 26rpx;
}

.remark-counter {
    position: absolute;
    right: 16rpx;
    bottom: 12rpx;
    font-size: 22rpx;
    color: #CCC;
}

/* 金额明细 */
.price-section {
    padding-bottom: 16rpx;
}

.price-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12rpx 0;
}

.price-label {
    font-size: 28rpx;
    color: #666;
}

.price-value {
    font-size: 28rpx;
    color: var(--text-dark);
}

.price-value.free {
    color: var(--primary-green);
    font-weight: 500;
}

.price-divider {
    height: 1rpx;
    background: rgba(0, 0, 0, 0.06);
    margin: 12rpx 0;
}

.price-row.total .price-label {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-dark);
}

.total-amount {
    display: flex;
    align-items: baseline;
    color: #E74C3C;
}

.total-symbol {
    font-size: 26rpx;
    font-weight: 600;
    margin-right: 4rpx;
}

.total-number {
    font-size: 44rpx;
    font-weight: 800;
}

/* 底部提交栏 */
.submit-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: var(--bg-white);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
    z-index: 100;
}

.submit-left {
    display: flex;
    align-items: baseline;
}

.submit-label {
    font-size: 26rpx;
    color: #666;
    margin-right: 8rpx;
}

.submit-price {
    display: flex;
    align-items: baseline;
    color: #E74C3C;
}

.submit-symbol {
    font-size: 28rpx;
    font-weight: 600;
    margin-right: 4rpx;
}

.submit-amount {
    font-size: 48rpx;
    font-weight: 800;
}

.submit-btn {
    background: linear-gradient(135deg, #5D9E6F 0%, var(--primary-green) 100%);
    color: #fff;
    height: 86rpx;
    line-height: 86rpx;
    padding: 0 60rpx;
    border-radius: 43rpx;
    font-size: 32rpx;
    font-weight: 700;
    box-shadow: 0 6rpx 20rpx rgba(74, 124, 89, 0.35);
    transition: all 0.3s;
}

.submit-btn:active {
    transform: scale(0.96);
    opacity: 0.9;
}

.submit-btn.disabled {
    background: #CCC;
    box-shadow: none;
}

/* 地址编辑弹窗 */
.address-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
}

.address-modal-mask.show {
    opacity: 1;
    visibility: visible;
}

.address-modal {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--bg-white);
    border-radius: 40rpx 40rpx 0 0;
    z-index: 1001;
    transform: translateY(100%);
    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    padding-bottom: env(safe-area-inset-bottom);
}

.address-modal.show {
    transform: translateY(0);
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 36rpx 40rpx 24rpx;
}

.modal-title {
    font-size: 34rpx;
    font-weight: 700;
    color: var(--text-dark);
}

.modal-close {
    font-size: 36rpx;
    color: #999;
    padding: 10rpx;
}

.modal-body {
    padding: 10rpx 40rpx;
}

.form-item {
    display: flex;
    align-items: center;
    padding: 28rpx 0;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.form-label {
    font-size: 28rpx;
    color: var(--text-dark);
    font-weight: 600;
    width: 140rpx;
    flex-shrink: 0;
}

.form-input {
    flex: 1;
    font-size: 28rpx;
    color: var(--text-dark);
}

.modal-footer {
    padding: 30rpx 40rpx;
}

.modal-save-btn {
    background: linear-gradient(135deg, #5D9E6F 0%, var(--primary-green) 100%);
    color: #fff;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 45rpx;
    font-size: 32rpx;
    font-weight: 700;
    box-shadow: 0 6rpx 20rpx rgba(74, 124, 89, 0.3);
}

.modal-save-btn:active {
    transform: scale(0.98);
    opacity: 0.9;
}
