/* pages/me/me.wxss */
/* 一味鲜 - 个人中心（延续主页设计语言） */

page {
    --primary-green: #4A7C59;
    --primary-green-dark: #3D6B4A;
    --gold-accent: #8B7355;
    --bg-light: #F5F3EF;
    --bg-white: #FFFFFF;
    --text-dark: #333333;
    --text-gray: #888888;
    --card-radius: 20rpx;
}

.me-page {
    min-height: 100vh;
    background: var(--bg-light);
}

/* 用户卡片 */
.user-card {
    position: relative;
    background: linear-gradient(135deg, #E6F0EB 0%, #D4E3DA 100%);
    padding: 80rpx 40rpx 50rpx;
    overflow: hidden;
}

.user-bg-decoration {
    position: absolute;
    top: -40rpx;
    right: -40rpx;
    width: 280rpx;
    height: 280rpx;
    background: radial-gradient(circle, rgba(74, 124, 89, 0.12) 0%, transparent 70%);
    border-radius: 50%;
}

.user-info {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
}

.avatar-btn {
    padding: 0 !important;
    margin: 0 !important;
    background: none !important;
    line-height: normal !important;
    border: none !important;
    width: auto !important;
}

.avatar-btn::after {
    display: none;
}

.user-avatar {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: 6rpx solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
    background: #DDD;
}

.user-detail {
    margin-left: 30rpx;
    flex: 1;
}

.nickname-input {
    font-size: 36rpx;
    font-weight: 700;
    color: #2C3E30;
    margin-bottom: 8rpx;
    background: none;
    border: none;
    padding: 0;
}

.nickname-display {
    font-size: 36rpx;
    font-weight: 700;
    color: #2C3E30;
    margin-bottom: 8rpx;
    display: block;
}

/* 未登录状态 */
.user-avatar-placeholder {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: 6rpx dashed rgba(74, 124, 89, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.avatar-placeholder-icon {
    font-size: 56rpx;
    opacity: 0.5;
}

.login-prompt {
    font-size: 36rpx;
    font-weight: 700;
    color: var(--primary-green);
    display: block;
    margin-bottom: 6rpx;
}

.login-sub {
    font-size: 24rpx;
    color: var(--text-gray);
    display: block;
}

.login-arrow {
    font-size: 40rpx;
    color: #CCC;
    margin-left: 10rpx;
}

.user-tag {
    font-size: 22rpx;
    color: var(--primary-green);
    background: rgba(255, 255, 255, 0.6);
    padding: 4rpx 16rpx;
    border-radius: 20rpx;
    display: inline-block;
}

/* 订单快捷入口 */
.order-shortcuts {
    background: var(--bg-white);
    border-radius: var(--card-radius);
    margin: -30rpx 24rpx 24rpx;
    padding: 28rpx 32rpx;
    position: relative;
    z-index: 2;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.shortcuts-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 28rpx;
}

.shortcuts-title {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-dark);
}

.view-all {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: var(--text-gray);
}

.arrow {
    font-size: 28rpx;
    margin-left: 4rpx;
    color: #CCC;
}

.shortcuts-grid {
    display: flex;
    justify-content: space-around;
}

.shortcut-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.shortcut-icon-box {
    position: relative;
    width: 90rpx;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(74, 124, 89, 0.06);
    border-radius: 24rpx;
    margin-bottom: 10rpx;
}

.shortcut-icon {
    font-size: 40rpx;
}

.shortcut-badge {
    position: absolute;
    top: -8rpx;
    right: -8rpx;
    background: #E74C3C;
    color: #fff;
    font-size: 20rpx;
    min-width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    border-radius: 16rpx;
    text-align: center;
    font-weight: 700;
}

.shortcut-text {
    font-size: 24rpx;
    color: #666;
}

/* 功能菜单 */
.menu-section {
    background: var(--bg-white);
    border-radius: var(--card-radius);
    margin: 0 24rpx 24rpx;
    padding: 10rpx 0;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx 36rpx;
    position: relative;
}

.menu-item:not(:last-child)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 80rpx;
    right: 36rpx;
    height: 1rpx;
    background: rgba(0, 0, 0, 0.04);
}

.menu-item:active {
    background: rgba(0, 0, 0, 0.02);
}

.menu-left {
    display: flex;
    align-items: center;
}

.menu-icon {
    font-size: 36rpx;
    margin-right: 20rpx;
    width: 44rpx;
    text-align: center;
}

.menu-title {
    font-size: 30rpx;
    color: var(--text-dark);
}

.menu-arrow {
    font-size: 32rpx;
    color: #CCC;
}

/* 商家管理入口 */
.admin-entry {
    border-bottom: 2rpx solid #F0F0F0;
    margin-bottom: 8rpx;
}

.admin-right {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.admin-tag {
    font-size: 22rpx;
    padding: 4rpx 14rpx;
    border-radius: 8rpx;
    background: #E8F5E9;
    color: #4A7C59;
    font-weight: 600;
}

.admin-tag.locked {
    background: #F5F5F5;
    color: #999;
}

/* 底部品牌 */
.footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60rpx 0 40rpx;
    opacity: 0.4;
}

.footer-logo {
    font-size: 48rpx;
    margin-bottom: 10rpx;
}

.footer-name {
    font-size: 24rpx;
    color: #999;
    font-weight: 500;
    letter-spacing: 4rpx;
}

.footer-ver {
    font-size: 20rpx;
    color: #CCC;
    margin-top: 4rpx;
}
