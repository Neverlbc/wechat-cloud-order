/* pages/admin-goods/admin-goods.wxss */

page {
    background: #F2F4F7;
}

.admin-goods-page {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

/* 分类 Tab */
.cat-tabs {
    display: flex;
    background: #fff;
    padding: 20rpx 24rpx;
    gap: 16rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.04);
    position: sticky;
    top: 0;
    z-index: 10;
}

.cat-tab {
    padding: 14rpx 28rpx;
    border-radius: 12rpx;
    font-size: 26rpx;
    color: #888;
    background: #F5F5F5;
    font-weight: 500;
    transition: all 0.3s;
}

.cat-tab.active {
    background: linear-gradient(135deg, #5D9B6E, #4A7C59);
    color: #fff;
    font-weight: 700;
    box-shadow: 0 4rpx 12rpx rgba(74,124,89,0.3);
}

/* 商品滚动区 */
.goods-scroll {
    flex: 1;
    height: 0;
}

.goods-list {
    padding: 20rpx 24rpx;
    padding-bottom: 140rpx;
}

/* 商品卡片 */
.goods-card {
    display: flex;
    background: #fff;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.goods-thumb-wrapper {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    flex-shrink: 0;
}

.goods-thumb {
    width: 200rpx;
    height: 200rpx;
}

.change-image-btn {
    position: absolute;
    bottom: 8rpx;
    left: 8rpx;
    background: rgba(0,0,0,0.6);
    color: #fff;
    font-size: 22rpx;
    padding: 6rpx 16rpx;
    border-radius: 8rpx;
    font-weight: 600;
}

.change-image-btn:active {
    background: rgba(74,124,89,0.9);
}

.goods-body {
    flex: 1;
    padding: 20rpx 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
}

.goods-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goods-name {
    font-size: 30rpx;
    font-weight: 700;
    color: #222;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
    margin-right: 12rpx;
    text-decoration: underline;
    text-decoration-color: rgba(74,124,89,0.3);
    text-underline-offset: 4rpx;
}

.sale-tag {
    font-size: 20rpx;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    font-weight: 600;
    flex-shrink: 0;
}

.sale-tag.on {
    background: #E8F5E9;
    color: #4A7C59;
}

.sale-tag.off {
    background: #FFF0F0;
    color: #EE4444;
}

.goods-desc {
    font-size: 22rpx;
    color: #BBB;
    margin-top: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goods-specs {
    display: flex;
    flex-wrap: wrap;
    gap: 8rpx;
    margin-top: 10rpx;
}

.spec-chip {
    font-size: 20rpx;
    background: #FFF7EE;
    color: #8B7355;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    font-weight: 500;
}

.goods-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
}

.price-box {
    display: flex;
    align-items: baseline;
}

.yen {
    font-size: 24rpx;
    color: #EE4444;
    font-weight: 600;
}

.price-val {
    font-size: 36rpx;
    font-weight: 800;
    color: #EE4444;
}

.goods-ops {
    display: flex;
    gap: 10rpx;
}

.op-toggle,
.op-edit,
.op-delete {
    padding: 8rpx 20rpx;
    border-radius: 10rpx;
    font-size: 22rpx;
    font-weight: 600;
    transition: all 0.2s;
}

.op-toggle:active,
.op-edit:active,
.op-delete:active {
    transform: scale(0.96);
}

.op-toggle {
    background: #F5F5F5;
    color: #999;
}

.op-edit {
    background: linear-gradient(135deg, #5D9B6E, #4A7C59);
    color: #fff;
    box-shadow: 0 2rpx 8rpx rgba(74,124,89,0.25);
}

.op-delete {
    background: #FFF0F0;
    color: #EE4444;
}

/* 空状态 */
.empty-hint {
    text-align: center;
    padding: 80rpx 0;
    color: #CCC;
    font-size: 28rpx;
}

/* ===== 底部新增按钮 ===== */
.add-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background: linear-gradient(135deg, #5D9B6E, #4A7C59);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 700;
    gap: 10rpx;
    box-shadow: 0 -4rpx 20rpx rgba(74,124,89,0.2);
    z-index: 100;
    padding-bottom: env(safe-area-inset-bottom);
}

.add-bar:active {
    opacity: 0.85;
}

.add-icon {
    font-size: 42rpx;
    font-weight: 300;
}

/* ===== 新增菜品弹窗 ===== */
.form-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 200;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
}

.form-mask.show {
    opacity: 1;
    pointer-events: auto;
}

.form-popup {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    border-radius: 32rpx 32rpx 0 0;
    z-index: 201;
    transform: translateY(100%);
    transition: transform 0.35s cubic-bezier(0.23, 1, 0.32, 1);
    padding-bottom: env(safe-area-inset-bottom);
}

.form-popup.show {
    transform: translateY(0);
}

.form-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 36rpx 40rpx 20rpx;
    border-bottom: 1rpx solid #F0F0F0;
}

.form-title {
    font-size: 34rpx;
    font-weight: 700;
    color: #222;
}

.form-close {
    font-size: 36rpx;
    color: #BBB;
    padding: 10rpx;
}

.form-body {
    padding: 30rpx 40rpx;
}

.form-item {
    margin-bottom: 32rpx;
}

.form-label {
    font-size: 26rpx;
    color: #666;
    font-weight: 600;
    margin-bottom: 12rpx;
    display: block;
}

.form-input {
    width: 100%;
    height: 80rpx;
    background: #F7F7F7;
    border-radius: 16rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
    border: 2rpx solid transparent;
    transition: border-color 0.3s;
}

.form-input:focus {
    border-color: #4A7C59;
    background: #FAFFF8;
}

.form-picker {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    background: #F7F7F7;
    border-radius: 16rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #333;
}

.form-placeholder {
    color: #CCC;
}

.picker-arrow {
    font-size: 22rpx;
    color: #BBB;
}

.form-footer {
    display: flex;
    gap: 20rpx;
    padding: 20rpx 40rpx 30rpx;
    border-top: 1rpx solid #F0F0F0;
}

.form-btn {
    flex: 1;
    height: 88rpx;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    font-weight: 700;
    transition: all 0.2s;
}

.form-btn:active {
    transform: scale(0.97);
}

.form-btn.cancel {
    background: #F5F5F5;
    color: #888;
}

.form-btn.confirm {
    background: linear-gradient(135deg, #5D9B6E, #4A7C59);
    color: #fff;
    box-shadow: 0 4rpx 16rpx rgba(74,124,89,0.3);
}

/* ===== 图片选择器 ===== */
.image-picker {
    display: flex;
    margin-top: 12rpx;
}

.image-add {
    width: 180rpx;
    height: 180rpx;
    background: #F7F7F7;
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2rpx dashed #DDD;
    gap: 8rpx;
}

.image-add:active {
    background: #F0F0F0;
    border-color: #4A7C59;
}

.image-add-icon {
    font-size: 48rpx;
}

.image-add-text {
    font-size: 22rpx;
    color: #AAA;
}

.image-preview {
    position: relative;
    width: 180rpx;
    height: 180rpx;
}

.preview-img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 16rpx;
}

.image-remove {
    position: absolute;
    top: -12rpx;
    right: -12rpx;
    width: 40rpx;
    height: 40rpx;
    background: #EE4444;
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    box-shadow: 0 2rpx 8rpx rgba(238,68,68,0.3);
}

/* ===== 加料编辑器 ===== */
.goods-specs-row {
    display: flex;
    align-items: center;
    gap: 12rpx;
    margin-top: 10rpx;
    flex-wrap: wrap;
}

.op-spec {
    font-size: 20rpx;
    color: #4A7C59;
    background: rgba(74,124,89,0.08);
    padding: 4rpx 14rpx;
    border-radius: 8rpx;
    font-weight: 600;
    flex-shrink: 0;
}

.op-spec:active {
    background: rgba(74,124,89,0.15);
}

.form-label-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

.spec-add-btn {
    font-size: 24rpx;
    color: #4A7C59;
    font-weight: 600;
    padding: 6rpx 16rpx;
    background: rgba(74,124,89,0.08);
    border-radius: 8rpx;
}

.spec-add-btn:active {
    background: rgba(74,124,89,0.15);
}

.spec-edit-list {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.spec-edit-row {
    display: flex;
    align-items: center;
    gap: 12rpx;
    background: #F7F7F7;
    padding: 16rpx 20rpx;
    border-radius: 12rpx;
}

.spec-name-input {
    flex: 2;
    height: 64rpx;
    background: #fff;
    border-radius: 10rpx;
    padding: 0 16rpx;
    font-size: 26rpx;
    color: #333;
    border: 2rpx solid #EEE;
}

.spec-name-input:focus {
    border-color: #4A7C59;
}

.spec-price-input {
    flex: 1;
    height: 64rpx;
    background: #fff;
    border-radius: 10rpx;
    padding: 0 16rpx;
    font-size: 26rpx;
    color: #333;
    text-align: center;
    border: 2rpx solid #EEE;
}

.spec-price-input:focus {
    border-color: #4A7C59;
}

.spec-price-unit {
    font-size: 24rpx;
    color: #999;
    flex-shrink: 0;
}

.spec-remove-btn {
    width: 48rpx;
    height: 48rpx;
    background: #FFF0F0;
    color: #EE4444;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    flex-shrink: 0;
}

.spec-remove-btn:active {
    background: #FFE0E0;
}

.spec-empty {
    padding: 24rpx;
    text-align: center;
    color: #CCC;
    font-size: 24rpx;
    background: #FAFAFA;
    border-radius: 12rpx;
}

.spec-add-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8rpx;
    padding: 24rpx;
    color: #4A7C59;
    font-size: 28rpx;
    font-weight: 600;
    border: 2rpx dashed rgba(74,124,89,0.3);
    border-radius: 12rpx;
    margin-top: 20rpx;
}

.spec-add-row:active {
    background: rgba(74,124,89,0.05);
}

.spec-add-icon {
    font-size: 36rpx;
}
