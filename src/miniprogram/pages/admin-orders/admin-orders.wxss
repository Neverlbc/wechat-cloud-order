/* pages/admin-orders/admin-orders.wxss */

page {
    background: #F2F4F7;
}

.admin-orders-page {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

/* 筛选 Tab */
.filter-tabs {
    display: flex;
    background: #fff;
    padding: 0 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.04);
    position: sticky;
    top: 0;
    z-index: 10;
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 26rpx;
    color: #888;
    position: relative;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6rpx;
}

.tab-item.active {
    color: #4A7C59;
    font-weight: 700;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40rpx;
    height: 6rpx;
    background: #4A7C59;
    border-radius: 3rpx;
}

.tab-badge {
    background: #EE4444;
    color: #fff;
    font-size: 18rpx;
    min-width: 32rpx;
    height: 32rpx;
    border-radius: 16rpx;
    text-align: center;
    line-height: 32rpx;
    font-weight: 700;
}

/* 订单滚动区域 */
.order-scroll {
    flex: 1;
    height: 0;
}

.order-list {
    padding: 20rpx 24rpx;
}

/* 订单卡片 */
.order-card {
    background: #fff;
    border-radius: 20rpx;
    margin-bottom: 24rpx;
    padding: 28rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
}

.header-left {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.order-no {
    font-size: 24rpx;
    color: #999;
    font-family: 'Courier New', monospace;
}

.status-tag {
    font-size: 22rpx;
    padding: 4rpx 14rpx;
    border-radius: 8rpx;
    font-weight: 600;
}

.tag-0 { background: #FFF7E6; color: #F0A04B; }
.tag-1 { background: #FFF0F0; color: #EE4444; }
.tag-2 { background: #E6F3FF; color: #3B8BDB; }
.tag-3 { background: #E8F5E9; color: #4A7C59; }
.tag-4 { background: #F5F5F5; color: #999; }
.tag--1 { background: #F5F5F5; color: #CCC; }

.order-time {
    font-size: 22rpx;
    color: #CCC;
}

/* 用户信息 */
.user-row {
    display: flex;
    align-items: center;
    gap: 12rpx;
    margin-bottom: 8rpx;
}

.user-label {
    font-size: 24rpx;
    color: #8B7355;
    font-weight: 600;
}

.user-info {
    font-size: 26rpx;
    color: #555;
    font-weight: 600;
}

.address-row {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 16rpx;
    padding-left: 4rpx;
}

/* 商品明细 */
.goods-detail {
    background: #FAFBFC;
    border-radius: 12rpx;
    padding: 16rpx 20rpx;
    margin: 12rpx 0;
}

.goods-row {
    display: flex;
    align-items: center;
    padding: 10rpx 0;
}

.goods-left {
    flex: 1;
    min-width: 0;
}

.goods-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 600;
}

.goods-spec {
    font-size: 22rpx;
    color: #8B7355;
    margin-left: 8rpx;
}

.goods-qty {
    font-size: 26rpx;
    color: #999;
    margin: 0 20rpx;
    font-weight: 600;
}

.goods-price {
    font-size: 26rpx;
    color: #555;
    font-weight: 700;
    min-width: 80rpx;
    text-align: right;
}

/* 备注 */
.remark-row {
    display: flex;
    align-items: flex-start;
    padding: 12rpx 0;
    gap: 4rpx;
}

.remark-label {
    font-size: 24rpx;
    color: #999;
    flex-shrink: 0;
}

.remark-text {
    font-size: 24rpx;
    color: #F0A04B;
    font-weight: 500;
}

/* 底部 */
.card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 16rpx;
    padding-top: 16rpx;
    border-top: 1rpx solid #F0F0F0;
}

.total-row {
    display: flex;
    align-items: baseline;
    gap: 8rpx;
}

.total-label {
    font-size: 26rpx;
    color: #999;
}

.total-amount {
    font-size: 36rpx;
    font-weight: 800;
    color: #EE4444;
}

.btn-group {
    display: flex;
    gap: 16rpx;
}

.op-btn {
    padding: 14rpx 32rpx;
    border-radius: 12rpx;
    font-size: 26rpx;
    font-weight: 700;
    transition: all 0.2s;
}

.op-btn:active {
    transform: scale(0.96);
}

.btn-cancel {
    background: #F5F5F5;
    color: #999;
}

.btn-primary {
    background: linear-gradient(135deg, #5D9B6E, #4A7C59);
    color: #fff;
    box-shadow: 0 4rpx 12rpx rgba(74,124,89,0.3);
}

.btn-done {
    background: linear-gradient(135deg, #F0A04B, #D4882A);
    color: #fff;
    box-shadow: 0 4rpx 12rpx rgba(240,160,75,0.3);
}

/* 空状态 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
}

.empty-icon {
    font-size: 80rpx;
    margin-bottom: 20rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #CCC;
}
