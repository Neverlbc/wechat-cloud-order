/* pages/detail/detail.wxss */
/* 一味鲜 - 商品详情页 */

page {
    --primary-green: #4A7C59;
    --primary-green-dark: #3D6B4A;
    --primary-green-light: #6BA57A;
    --gold-accent: #8B7355;
    --bg-light: #F5F3EF;
    --bg-white: #FFFFFF;
    --text-dark: #333333;
    --text-gray: #888888;
    --card-radius: 24rpx;
}

.detail-page {
    min-height: 100vh;
    background: var(--bg-light);
}

/* 大图 */
.hero-section {
    position: relative;
    width: 100%;
    height: 480rpx;
    overflow: hidden;
}

.hero-image {
    width: 100%;
    height: 100%;
    display: block;
}

.hero-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: linear-gradient(transparent, rgba(245, 243, 239, 0.6));
}

/* 返回按钮 */
.back-btn {
    position: absolute;
    top: 80rpx;
    left: 24rpx;
    width: 72rpx;
    height: 72rpx;
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
}

.back-icon {
    color: #fff;
    font-size: 48rpx;
    font-weight: 300;
    margin-right: 4rpx;
}

/* 商品信息卡片 */
.info-card {
    background: var(--bg-white);
    border-radius: var(--card-radius) var(--card-radius) 0 0;
    margin-top: -40rpx;
    position: relative;
    z-index: 2;
    padding: 36rpx 32rpx 28rpx;
}

.info-main {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16rpx;
}

.info-left {
    flex: 1;
    margin-right: 20rpx;
}

.goods-name {
    font-size: 40rpx;
    font-weight: 800;
    color: var(--text-dark);
    display: block;
    margin-bottom: 10rpx;
    line-height: 1.3;
}

.goods-desc {
    font-size: 26rpx;
    color: var(--text-gray);
    display: block;
    margin-bottom: 16rpx;
    line-height: 1.5;
}

.goods-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
}

.goods-tags .tag {
    font-size: 20rpx;
    color: var(--primary-green);
    background: rgba(74, 124, 89, 0.08);
    padding: 4rpx 14rpx;
    border-radius: 8rpx;
}

.info-price {
    display: flex;
    align-items: baseline;
    flex-shrink: 0;
    padding-top: 8rpx;
}

.price-symbol {
    font-size: 28rpx;
    color: #E74C3C;
    font-weight: 600;
}

.price-number {
    font-size: 52rpx;
    color: #E74C3C;
    font-weight: 800;
    line-height: 1;
}

.price-unit {
    font-size: 22rpx;
    color: var(--text-gray);
    margin-left: 4rpx;
}

.sales-info {
    display: flex;
    align-items: center;
    font-size: 22rpx;
    color: #BBB;
}

.dot {
    margin: 0 12rpx;
}

/* 通用 section 卡片 */
.section-card {
    background: var(--bg-white);
    margin: 20rpx 0 0;
    padding: 28rpx 32rpx;
}

.section-header-row {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
}

.section-label {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-dark);
    flex: 1;
}

.section-required {
    font-size: 22rpx;
    color: #E74C3C;
    background: rgba(231, 76, 60, 0.08);
    padding: 2rpx 12rpx;
    border-radius: 8rpx;
}

.section-sub {
    font-size: 22rpx;
    color: var(--text-gray);
}

/* 辣度选项 */
.option-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
}

.option-chip {
    padding: 16rpx 32rpx;
    background: #F8F7F4;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #666;
    border: 2rpx solid transparent;
    transition: all 0.25s;
}

.option-chip.active {
    background: rgba(74, 124, 89, 0.08);
    border-color: var(--primary-green);
    color: var(--primary-green);
    font-weight: 600;
}

/* 加料列表 */
.specs-list {
    display: flex;
    flex-direction: column;
}

.spec-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
    transition: all 0.2s;
}

.spec-item:last-child {
    border-bottom: none;
}

.spec-item.checked {
    background: rgba(74, 124, 89, 0.02);
    margin: 0 -32rpx;
    padding: 24rpx 32rpx;
    border-radius: 12rpx;
}

.spec-left {
    display: flex;
    align-items: center;
}

.spec-checkbox {
    width: 44rpx;
    height: 44rpx;
    border-radius: 12rpx;
    border: 3rpx solid #DDD;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
    transition: all 0.25s;
}

.spec-checkbox.active {
    background: var(--primary-green);
    border-color: var(--primary-green);
}

.check-icon {
    color: #fff;
    font-size: 24rpx;
    font-weight: 700;
}

.spec-name {
    font-size: 30rpx;
    color: var(--text-dark);
}

.spec-price {
    font-size: 28rpx;
    color: var(--gold-accent);
    font-weight: 600;
}

/* 数量选择 */
.quantity-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.quantity-hint {
    font-size: 26rpx;
    color: var(--text-gray);
}

.quantity-stepper {
    display: flex;
    align-items: center;
    background: #F8F7F4;
    border-radius: 20rpx;
    overflow: hidden;
}

.stepper-btn {
    width: 72rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: var(--primary-green);
    font-weight: 700;
}

.stepper-btn.disabled {
    color: #CCC;
}

.stepper-btn:active {
    background: rgba(74, 124, 89, 0.1);
}

.stepper-value {
    font-size: 32rpx;
    font-weight: 700;
    color: var(--text-dark);
    min-width: 60rpx;
    text-align: center;
}

/* 底部操作栏 */
.action-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 130rpx;
    background: var(--bg-white);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 0 -6rpx 30rpx rgba(0, 0, 0, 0.08);
    z-index: 100;
}

.action-left {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.action-price-info {
    display: flex;
    align-items: baseline;
}

.action-label {
    font-size: 24rpx;
    color: #999;
    margin-right: 10rpx;
}

.action-price {
    display: flex;
    align-items: baseline;
    color: #E74C3C;
}

.action-symbol {
    font-size: 28rpx;
    font-weight: 600;
    margin-right: 4rpx;
}

.action-amount {
    font-size: 48rpx;
    font-weight: 800;
}

.action-specs-text {
    font-size: 22rpx;
    color: var(--text-gray);
    margin-top: 2rpx;
}

.action-btn {
    background: linear-gradient(135deg, var(--primary-green-light) 0%, var(--primary-green) 100%);
    color: #fff;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 48rpx;
    border-radius: 45rpx;
    font-size: 30rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
    box-shadow: 0 6rpx 24rpx rgba(74, 124, 89, 0.4);
    transition: all 0.3s;
    flex-shrink: 0;
}

.action-btn:active {
    transform: scale(0.96);
    opacity: 0.9;
}

.btn-icon {
    font-size: 32rpx;
    margin-right: 10rpx;
}
